{
    "tasks": [
        {
            "type": "shell",
            "label": "Build project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "-save-temps",
                "-o",
                "${workspaceFolder}/build/debug/app",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/ds/*.cpp",
                "${workspaceFolder}/src/pc/*.cpp",
                "${workspaceFolder}/src/beer_selector/*.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build project (RELEASE)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-save-temps",
                "-O3",
                "-Ofast",
                "-o",
                "${workspaceFolder}/build/release/app",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/ds/*.cpp",
                "${workspaceFolder}/src/pc/*.cpp",
                "${workspaceFolder}/src/beer_selector/*.cpp",
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}